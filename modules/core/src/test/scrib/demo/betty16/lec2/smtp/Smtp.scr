module demo.betty16.lec2.smtp.Smtp;


sig <java> "demo.betty16.lec2.smtp.message.server._220"
		from "demo/fase/smtp/message/server/_220.java" as 220;
sig <java> "demo.betty16.lec2.smtp.message.server._250"
		from "demo/fase/smtp/message/server/_250.java" as 250;
sig <java> "demo.betty16.lec2.smtp.message.server._250d"
		from "demo/fase/smtp/message/server/_250d.java" as 250d;


sig <java> "demo.betty16.lec2.smtp.message.client.Ehlo"
		from "demo/fase/smtp/message/client/Ehlo.java" as Ehlo;
sig <java> "demo.betty16.lec2.smtp.message.client.StartTls"
		from "demo/fase/smtp/message/client/StartTls.java" as StartTls;
sig <java> "demo.betty16.lec2.smtp.message.client.Quit"
		from "demo/fase/smtp/message/client/Quit.java" as Quit;


global protocol Smtp(role C, role S) {
	220 from S to C;
	//choice at C {
		do Init(C, S);
		do StartTls(C, S);
		do Init(C, S);
		Quit from C to S;
	/*} or {
		Quit from C to S;
	}*/
}

aux global protocol Init(role C, role S) {
	Ehlo from C to S;
	rec X {
		choice at S {
			250d from S to C;
			continue X;
		} or {
			250 from S to C;
		}
	}
}

aux global protocol StartTls(role C, role S) {
	StartTls from C to S;
	220 from S to C;
}
