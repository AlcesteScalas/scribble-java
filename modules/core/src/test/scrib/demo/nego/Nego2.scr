//$ bin/scribblec.sh modules/core/src/test/scrib/demo/nego/Nego2.scr -ip modules/core/src/test/scrib/ -d modules/core/src/test/scrib/ -fsm Negotiate C

module demo.nego.Nego2;

type <java> "test.nego.SAP" from "test/nego/SAP.java" as SAP;

// C = Consumer, P = Producer
global protocol Negotiate(role C, role P)
{
	propose(SAP) from C to P;
	do NegotiateAux(P, C);
}

aux global protocol NegotiateAux(role A, role B)
{
	choice at A
	{
		accpt() from A to B;
		confirm() from B to A;
	}
	or
	{
		reject() from A to B;
	}
	or
	{
		propose(SAP) from A to B;
		do NegotiateAux(B, A);
	}
}
